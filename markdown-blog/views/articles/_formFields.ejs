<div class="form-group">
  <label for="title">Title</label>
  <input type="text" name="title" value="<%= article.title %>" id="title" required class="form-control" />
</div>
<div class="form-group">
  <label for="title">Description</label>
  <textarea name="description"  id="description" required class="form-control"><%= article.description %>
  </textarea>
</div>
<div class="form-group mb-2">
  <label for="title">Markdown</label>
  <textarea name="markdown"  id="markdown" required class="form-control"><%= article.markdown %>
  </textarea>
</div>

<a href="/articles/" class="btn btn-secondary">Cancel</a>
<button class="btn btn-primary">Save</button>
